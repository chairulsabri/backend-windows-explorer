        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{api_base}}/files/6",
              "host": ["{{api_base}}"],
              "path": ["files", "6"]
            },
            "description": "Delete a file"
          }
        }
      ]
    },
    {
