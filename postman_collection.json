{
  "info": {
    "name": "Windows Explorer API",
    "description": "Complete API collection for Windows Explorer file management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_base",
      "value": "{{base_url}}/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Get API information and available endpoints"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check API and database health status"
          }
        }
      ]
    },
    {
      "name": "Folders",
      "item": [
        {
          "name": "Get All Folders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/folders?page=1&limit=10",
              "host": ["{{api_base}}"],
              "path": ["folders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "created_at",
                  "disabled": true
                },
                {
                  "key": "sortOrder",
                  "value": "DESC",
                  "disabled": true
                }
              ]
            },
            "description": "Retrieve all folders with pagination and optional search"
          }
        },
        {
          "name": "Get Folder by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/folders/1",
              "host": ["{{api_base}}"],
              "path": ["folders", "1"]
            },
            "description": "Get specific folder by ID"
          }
        },
        {
          "name": "Get Folder Contents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/folders/2/contents",
              "host": ["{{api_base}}"],
              "path": ["folders", "2", "contents"]
            },
            "description": "Get all folders and files inside a specific folder"
          }
        },
        {
          "name": "Get Folder Tree",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_base}}/folders/tree/all",
              "host": ["{{api_base}}"],
              "path": ["folders", "tree", "all"]
            },
            "description": "Get complete folder hierarchy as tree structure"
          }
        },
        {
          "name": "Create Folder",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Projects\",\n  \"path\": \"/Documents/Projects\",\n  \"parent_id\": 2\n}"
            },
            "url": {
              "raw": "{{api_base}}/folders",
              "host": ["{{api_base}}"],
              "path": ["folders"]
            },
            "description": "Create a new folder"
          }
        },
        {
          "name": "Update Folder",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Projects\",\n  \"path\": \"/Documents/UpdatedProjects\"\n}"
            },
            "url": {
              "raw": "{{api_base}}/folders/7",
              "host": ["{{api_base}}"],
              "path": ["folders", "7"]
            },
            "description": "Update folder information"
          }
        },
        {
          "name": "Delete Folder",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{api_base}}/folders/7",
              "host": ["{{api_base}}"],
              "path": ["folders", "7"]
            },
            "description": "Delete a folder and all its contents (CASCADE)"
          }
        }
      ]
    },
